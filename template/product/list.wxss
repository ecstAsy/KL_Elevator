 .ProductList {
  position: relative;
  width: 100%;
  border-radius: 10rpx;
  border: 1px solid #bbb;
  margin-bottom: 60rpx;
  padding-bottom: 80rpx;
  overflow: hidden;
}
.ProductList::before{
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 560rpx;
  height: 100%;
  background: linear-gradient(to right,rgba(0,0,0,.5) 0,rgba(0,0,0,0) 80%);  
}
.ProductList_Image {
  width: 100%;
  vertical-align: bottom;
  background: #ddd;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.ProductList_Image image:not(.VR) {
  width: 100%;
  height: 100%;
}
.VR_box{
  position: absolute;
  z-index: 1000;
  left: 30rpx;
  top: 30rpx;
}

.ProductList_Image .VR {
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
}

.VR_txt{
  display: block;
  height: 40rpx;
  font-size: 20rpx;
  color: #f5f5f5;
  
}

.ProductList_Intro {
  width: 100%;
  font-size: 28rpx;
  position: absolute;
  bottom: 0rpx;
  z-index: 9999;
}

.ProductList_Intro text {
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  
}

.ProductList_type {
  margin-left: 30rpx;
  color: #f5f5f5;
}

.ProductList_price {
  text-align: right;
  margin-right: 30rpx;
  color: #3365ad;
} 


 



