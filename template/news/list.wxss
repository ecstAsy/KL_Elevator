.NewsList{
  margin: 36rpx 24rpx 0;
  border-bottom: 1rpx solid #ddd;
}

.NewsList_Intro{
  display: inline-block;
  width: 65%;
  padding-left: 2.5%;
  height: 180rpx;
  vertical-align: top;
}

.NewsList_Intro_Title{
  font-size: 32rpx;
  color: #010101;
  display: block;
  margin-bottom: 20rpx;
}

.NewsList_Intro_Time{
  font-size: 26rpx;
  color: #6E6D6E;
  display: block;
}

.NewsList_Image{
  display: inline-block;
  width: 30%;
  margin-left: 2.5%;
  height: 180rpx;
  background: #ddd;
}

.NewsList_Image image{
  width: 100%;
  height: 100%;
}