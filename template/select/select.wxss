.Select {
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.2);
  z-index: 999;
}

.Select_picker {
  height: 50%;
  position: absolute;
  bottom: 0;
  background: #fff;
}

.pickerCancel, .pickerConfim {
  position: absolute;
  z-index: 300;
  top: 30rpx;
  width: 45%;
  display: block;
}

.pickerCancel {
  left: 0;
  text-align: left;
  text-indent: 0;
  padding-left: 5%;
  font-size: 32rpx;
  color: #888;
}

.pickerConfim {
  right: 0;
  text-align: right;
  padding-right: 5%;
  color: #3365ad;
  font-size: 32rpx;
}

.pickerIndictor {
  width: 24%;
  height: 30px;
  margin-left: 38%;
  border-top: 1rpx solid #3365ad;
  border-bottom: 1rpx solid #3365ad;
  text-align: center;
}

.Select_item {
  line-height: 30px;
  text-align: center;
  height: 30px;
  overflow: hidden;
  width: 24%;
  margin: 0 auto;
  color: #555;
  font-size: 32rpx;
}