.Classic_list {
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #D7D6DC;
}

.Classic_list_image, .Classic_list_intro {
  display: inline-block;
  padding: 25rpx 0;
  vertical-align: middle;
}

.Classic_list_image {
  width: 30%;
  padding-left: 5%;
}

.Classic_list_image image {
  width: 100%;
}

.Classic_list_intro {
  width: 60%;
  padding-left: 5%;
}

.Classic_list_intro_name {
  font-size: 32rpx;
  color: #333;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.Classic_list_intro_intro {
  font-size: 28rpx;
  color: #888;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
